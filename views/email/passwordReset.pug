extends baseEmail

block content
  p Hi #{firstName},
  p Here's the link to reset your password. It will expire in ten minutes from now: 

  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you didn't request this link, please ignore this email.
